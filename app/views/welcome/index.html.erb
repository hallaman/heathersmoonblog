						<%= image_tag @about.main_image.url(:thumb) if @about.present?%>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="purple-bg ">
		<div class="col-xs-12">
			<div class="container">
				<div class="row">
					<div class="birthchart">	
						<div class="hidden-xs col-xs-12 col-sm-5">
							<div class="thumbnail">
