	    	<h4><span class="emph-day"><%= Date.today.strftime('%A') %></span><%= Date.today.strftime('%-d %B %Y') %></h4>

				<% 
		  		if @daily_reading_text.present? 
		  		  @daily_reading_text = strip_tags(@daily_reading.body).truncate_words(193).split(/[^'\w^.\w^,\w^!\w^?\w]+/).in_groups(2)

			      @daily_para_1 = @daily_reading_text[0].join(' ').to_s 
			      @daily_para_2 = @daily_reading_text[1].join(' ').to_s
			    end
			  %>

				<div class="entry col-xs-12 col-md-6 text-left">
					<p><%= @daily_para_1.to_s  if @daily_para_1.present? %></p>
				</div>

				<div class="entry col-xs-12 col-md-6 text-left">
					<p><%= @daily_para_2.to_s  if @daily_para_2.present? %></p>
				</div>

				
			</div>
		</div>
	</div>
	<div class="text-center">
		<div class="readmore">
			<%= link_to 'READ MORE', post_path(daily), class: 'btn btn-default an-btn ' if !daily.nil? %>
